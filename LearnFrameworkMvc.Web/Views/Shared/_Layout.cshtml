@using System.Security.Claims
@using LearnFrameworkMvc.Module.Models.System
@using LearnFrameworkMvc.Module.Services
@using System.Linq;
@inject PermissionService permissionService;
@{
    string claimEmail = User.FindFirst(ClaimTypes.Email)!.Value;
    string claimId = User.FindFirst("Id")!.Value;
    string datenow = DateTime.Now.ToString("dd MMM yyyy HH:mm");

    List<TbmMenuModel> menus = await permissionService.GetMenu(claimId);
    var requestPath = Context.Request.Path;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="Description">
    <meta name="msapplication-tap-highlight" content="no">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon.png")">

    <link href="@Url.Content("~/main.css")" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.5/dist/sweetalert2.min.css" rel="stylesheet">
    @* <link href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" /> *@
    <link href="//cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Css", required: false)
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src"></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div> <div class="app-header__content">
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                            <img width="42" class="rounded-circle" src="@Url.Content("~/assets/images/avatars/1.png")" alt>
                                            <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                        </a>
                                        <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                            <a href="@Url.Content("~/Configuration/MyProfile")" tabindex="0" class="dropdown-item">My Profile</a>
                                            <a href="@Url.Content("~/Login/Logout")" tabindex="0" class="dropdown-item">Logout</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        @claimEmail
                                    </div>
                                    <div class="widget-subheading">
                                        @datenow
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div> 
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            @{
                                string homeActive = "";
                                if (requestPath == "/Home")
                                {
                                    homeActive = "mm-active";
                                }
                            }
                            <li class="app-sidebar__heading">Home</li>
                            <li>
                                <a href="@Url.Content("~/Home")" class="@homeActive">
                                    <i class="metismenu-icon pe-7s-home"></i>Home
                                </a>
                            </li>
                            @{
                                string lastSection = "";
                            }
                            @foreach(var data in menus){
                                string active = "";
                                if (data.Url.Contains(requestPath))
                                {
                                    active = "mm-active";
                                }

                                if (data.Section != lastSection)
                                {
                                    <li class="app-sidebar__heading">@data.Section</li>
                                    lastSection = data.Section;
                                }
                                if (!string.IsNullOrEmpty(data.Url) && data.ParentId == null)
                                {
                                    <li>
                                        <a href="@Url.Content(data.Url)" class="@active">
                                            <i class="metismenu-icon @data.IconClass"></i>@data.Title
                                        </a>
                                    </li>
                                }
                                else if(string.IsNullOrEmpty(data.Url) && data.ParentId == null && menus.Exists(x=>x.ParentId == data.Id))
                                {
                                    string parentActive = "";
                                    if (menus.Exists(x => x.ParentId == data.Id && x.Url.Contains(requestPath)))
                                    {
                                        parentActive = "mm-active";
                                    }

                                    <li class="@parentActive">
                                        <a href="#">
                                            <i class="metismenu-icon @data.IconClass"></i>@data.Title
                                            <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                        </a>
                                        <ul class="">
                                            @foreach(var data1 in menus.Where(x=>x.ParentId == data.Id))
                                            {
                                                active = "";
                                                if (data1.Url.Contains(requestPath))
                                                {
                                                    active = "mm-active";
                                                }
                                                <li>
                                                    <a href="@Url.Content(data1.Url)" class="@active">
                                                        <i class="metismenu-icon"></i>@data1.Title
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div> 
            <div class="app-main__outer">
                <div class="app-main__inner">
                    @RenderBody()
                </div>
                <div class="app-wrapper-footer">
                    <div class="app-footer">
                        <div class="app-footer__inner">
                            <div class="app-footer-left">
                                <ul class="nav">
                                    <li class="nav-item">
                                        Made with <i class="fa fa-heart" style="color:red;"></i> in Indonesia. By <a target="_blank" href="https://www.linkedin.com/in/tegar-swasono/" title="Tegar Swasono">Tegar Swasono</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await RenderSectionAsync("Modal", required: false)
    <script type="text/javascript" src="@Url.Content("~/assets/scripts/main.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.5/dist/sweetalert2.all.min.js"></script>
    @* <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script> *@
    <script src="//cdn.datatables.net/2.0.0/js/dataTables.min.js"></script>
    <script type="text/javascript">
        function ShowMessage(icon, message) {
            Swal.fire({
                icon: icon,
                title: message,
                showConfirmButton: false,
                timer: 1000
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
