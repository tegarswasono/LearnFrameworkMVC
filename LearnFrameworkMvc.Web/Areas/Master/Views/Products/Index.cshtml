@using LearnFrameworkMvc.Module.Services
@using LearnFrameworkMvc.Module
@inject PermissionService permissionService;
@{
    string title = "Products";
    string icon = "pe-7s-notebook";
    ViewData["Title"] = title;

    string claimId = User.FindFirst("Id")!.Value;


}
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="@icon icon-gradient bg-tempting-azure">
                </i>
            </div>
            <div>
                @title
                <div class="page-title-subheading">
                    <a title="Home" href="@Url.Content("~/Home")">Home</a> / @title
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            Checklist Permission: <br/>
            @if (@permissionService.HasPermission(claimId, ModuleFunction.ProductView))
            {
                <button>View</button>
            }
            @if (@permissionService.HasPermission(claimId, ModuleFunction.ProductAdd))
            {
                <button>Add</button>
            }
            @if (@permissionService.HasPermission(claimId, ModuleFunction.ProductEdit))
            {
                <button>Edit</button>
            }
            @if (@permissionService.HasPermission(claimId, ModuleFunction.ProductDelete))
            {
                <button>Delete</button>
            }
            
        </p>
    </div>
</div>