@{
    string title = "Transaction";
    string icon = "pe-7s-note2";
    ViewData["Title"] = title;
}
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="@icon icon-gradient bg-tempting-azure">
                </i>
            </div>
            <div>
                @title
                <div class="page-title-subheading">
                    <a title="Home" href="@Url.Content("~/Home")">Home</a> / @title
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h2>@title</h2>
    </div>
</div>